<MandelbrotExplorerScreen>:
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.05, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        
        # Top toolbar
        BoxLayout:
            size_hint_y: 0.08
            padding: 10
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.15, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            Button:
                text: 'Back to Menu'
                size_hint_x: 0.2
                on_release: root.go_back_to_menu()
            
            Label:
                id: status_label
                text: 'Ready'
                size_hint_x: 0.6
            
            Label:
                id: zoom_label
                text: f'Zoom: {root.zoom_level:.1f}x'
                size_hint_x: 0.2
        
        # Main content
        BoxLayout:
            orientation: 'horizontal'
            
            # Left control panel
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.25
                padding: 10
                spacing: 10
                canvas.before:
                    Color:
                        rgba: 0.15, 0.15, 0.15, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                
                Label:
                    text: 'Mandelbrot Explorer'
                    font_size: 24
                    size_hint_y: 0.1
                
                # Add more controls here for adjusting parameters
                
                Button:
                    text: 'Reset View'
                    size_hint_y: 0.08
                    on_release: root.reset_view()
            
            # Right display area
            Image:
                id: fractal_image
                size_hint_x: 0.75
